---
const docsLinks = [
  { href: '/docs/guide', label: 'User Guide' },
  { href: '/docs/providers', label: 'TTS Providers' },
  { href: '/docs/readme', label: 'CLI Documentation' },
  { href: '/docs/troubleshooting', label: 'Troubleshooting' },
  { href: '/docs/privacy', label: 'Privacy Policy' },
];
---

<header class="sticky top-0 z-50 bg-surface-dark/80 backdrop-blur-lg border-b border-surface-light">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 text-white hover:text-brand transition-colors">
        <img src="/logo.png" alt="Script to Speech" class="h-8 w-8" />
        <span class="font-semibold text-lg hidden sm:block">Script to Speech</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <a href="/" class="text-gray-300 hover:text-brand transition-colors text-sm font-medium">
          Home
        </a>

        <!-- Docs Dropdown -->
        <div class="relative group">
          <button class="text-gray-300 hover:text-brand transition-colors text-sm font-medium inline-flex items-center gap-1" style="color: inherit;">
            Docs
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <!-- Dropdown menu -->
          <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="bg-surface border border-surface-light rounded-lg shadow-xl py-2 min-w-48">
              {
                docsLinks.map((link) => (
                  <a
                    href={link.href}
                    class="block px-4 py-2 text-sm text-gray-300 hover:text-brand hover:bg-surface-light transition-colors"
                  >
                    {link.label}
                  </a>
                ))
              }
            </div>
          </div>
        </div>

        <a
          href="https://github.com/trentw/script-to-speech"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-300 hover:text-brand transition-colors text-sm font-medium inline-flex items-center gap-1"
        >
          GitHub
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-300 hover:text-white transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-1 pt-4 border-t border-surface-light">
        <a href="/" class="text-gray-300 hover:text-brand transition-colors text-sm font-medium py-2">
          Home
        </a>

        <!-- Mobile Docs Section -->
        <div class="py-2">
          <div class="text-gray-500 text-xs uppercase tracking-wider mb-2">Documentation</div>
          {
            docsLinks.map((link) => (
              <a
                href={link.href}
                class="block text-gray-300 hover:text-brand transition-colors text-sm font-medium py-2 pl-2"
              >
                {link.label}
              </a>
            ))
          }
        </div>

        <a
          href="https://github.com/trentw/script-to-speech"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-300 hover:text-brand transition-colors text-sm font-medium py-2 inline-flex items-center gap-1"
        >
          GitHub
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
