---

<section id="downloads" class="py-24 bg-surface-dark">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        Download Script to Speech
      </h2>
      <p class="text-xl text-gray-400">
        Free to download. Bring your own API keys for TTS providers.
      </p>
    </div>

    <!-- Download cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {
        platforms.map((platform) => (
          <a
            href={platform.downloadUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="group p-6 bg-surface rounded-xl border border-surface-light hover:border-brand/50 transition-all text-center"
          >
            <div class="text-gray-400 group-hover:text-brand transition-colors mb-4 flex justify-center">
              <Fragment set:html={platform.icon} />
            </div>
            <h3 class="text-xl font-semibold text-white mb-1">{platform.name}</h3>
            <p class="text-gray-400 text-sm mb-4">{platform.description}</p>
            <span class="inline-flex items-center gap-2 text-brand text-sm font-medium">
              Download {platform.fileHint}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </span>
          </a>
        ))
      }
    </div>

    <!-- Additional info -->
    <div class="mt-12 text-center">
      <p class="text-gray-400 mb-4">
        Looking for the CLI version?
        <a
          href="https://github.com/trentw/script-to-speech#quick-start"
          target="_blank"
          rel="noopener noreferrer"
          class="text-brand hover:text-brand-light"
        >
          Check out the CLI documentation
        </a>
      </p>
      <p class="text-gray-500 text-sm">
        All releases are available on
        <a
          href="https://github.com/trentw/script-to-speech/releases"
          target="_blank"
          rel="noopener noreferrer"
          class="text-brand hover:text-brand-light"
        >
          GitHub Releases
        </a>
      </p>
    </div>
  </div>
</section>
