---
const currentYear = new Date().getFullYear();

const footerLinks = {
  documentation: [
    { href: '/docs/guide', label: 'User Guide' },
    { href: '/docs/providers', label: 'TTS Providers' },
    { href: '/docs/troubleshooting', label: 'Troubleshooting' },
    { href: '/docs/readme', label: 'CLI Documentation' },
  ],
  project: [
    { href: 'https://github.com/trentw/script-to-speech', label: 'GitHub', external: true },
    { href: 'https://github.com/trentw/script-to-speech/releases', label: 'Releases', external: true },
    { href: 'https://github.com/trentw/script-to-speech/issues', label: 'Report Issues', external: true },
  ],
  legal: [
    { href: '/docs/privacy', label: 'Privacy Policy' },
    { href: 'https://github.com/trentw/script-to-speech/blob/main/LICENSE', label: 'MIT License', external: true },
  ],
};
---

<footer class="bg-surface border-t border-surface-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href="/" class="flex items-center gap-2 text-white hover:text-brand transition-colors">
          <img src="/logo.png" alt="Script to Speech" class="h-8 w-8" />
          <span class="font-semibold">Script to Speech</span>
        </a>
        <p class="mt-4 text-sm text-gray-400">
          Convert screenplays into multi-voiced audiobooks. Free, open-source, and privacy-focused.
        </p>
      </div>

      <!-- Documentation -->
      <div>
        <h3 class="text-white font-semibold mb-4">Documentation</h3>
        <ul class="space-y-2">
          {
            footerLinks.documentation.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-gray-400 hover:text-brand transition-colors">
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Project -->
      <div>
        <h3 class="text-white font-semibold mb-4">Project</h3>
        <ul class="space-y-2">
          {
            footerLinks.project.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-400 hover:text-brand transition-colors"
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                >
                  {link.label}
                  {link.external && (
                    <svg
                      class="inline-block w-3 h-3 ml-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-white font-semibold mb-4">Legal</h3>
        <ul class="space-y-2">
          {
            footerLinks.legal.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-400 hover:text-brand transition-colors"
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-surface-light flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} Script to Speech. MIT Licensed.
      </p>
      <div class="flex items-center gap-4">
        <!-- GitHub -->
        <a
          href="https://github.com/trentw/script-to-speech"
          class="text-gray-400 hover:text-brand transition-colors"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
